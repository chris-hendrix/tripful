# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://tripful:tripful_dev@localhost:5433/tripful

# Authentication
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging
# Options: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# Security & Behavior Flags
# Set cookie Secure flag (defaults to true in production)
# COOKIE_SECURE=true
# Expose error details (stack traces) in responses (defaults to true in development)
# EXPOSE_ERROR_DETAILS=false
# Enable fixed verification code "123456" for testing (defaults to true in non-production)
# ENABLE_FIXED_VERIFICATION_CODE=false

# Twilio Verify (required when ENABLE_FIXED_VERIFICATION_CODE=false)
# Get credentials from https://console.twilio.com
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxx
# TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxx

# Storage Provider: "local" (default) or "s3"
# STORAGE_PROVIDER=s3

# S3-compatible Storage (required when STORAGE_PROVIDER=s3)
# Names match Railway Storage Bucket's AWS SDK preset
# Also works with AWS S3, Cloudflare R2, etc.
# AWS_ENDPOINT_URL=https://s3.us-east-1.amazonaws.com
# AWS_S3_BUCKET_NAME=tripful-uploads
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-east-1

# File Upload Configuration
# Directory where uploaded files are stored (relative to project root, local mode only)
UPLOAD_DIR=uploads
# Maximum file size in bytes (default: 5242880 = 5MB)
MAX_FILE_SIZE=5242880
# Comma-separated list of allowed MIME types for uploads (must start with 'image/')
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp
