{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "../../",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/types": ["../../shared/types"],
      "@shared/schemas": ["../../shared/schemas"],
      "@shared/utils": ["../../shared/utils"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts"]
}
